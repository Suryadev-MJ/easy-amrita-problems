#include <iostream>
using namespace std;
int main()
{
    int name;
    cout << "Enter your name: " ;       // Asking for users name //
    cin >> name ;       // Taking users input as name //
    cout << "Namah Shivaya, " << name << "!" ;      // Printing "Namah Shivaya" with their name//
    
    return 0;
}